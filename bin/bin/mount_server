#!/bin/bash

case "$(wpa_cli status | grep -x "ssid.*" | cut -c6-)" in
    SaludaMedical)
        mount.cifs //slm-syd-file.saludamedical.com/Implant /server -o username=Daniel.Parker
        ;;
    moose2.4)
        mount.nfs 192.168.1.100:/export/share /server
        ;;
    *)
        echo "No mount point defined for: $NETWORK"
        ;;
esac
