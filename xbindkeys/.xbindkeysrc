# backlight
"sudo xbacklight -dec 10"
    XF86MonBrightnessDown
"sudo xbacklight -inc 10"
    XF86MonBrightnessUp

# volume
"/usr/bin/amixer set Master toggle"
    XF86AudioMute
"/usr/bin/amixer set Master 10%-"
    XF86AudioLowerVolume
"/usr/bin/amixer set Master 10%+"
    XF86AudioRaiseVolume
&& exec $2
# power
"prompt 'Are you sure you want to shutdown?' 'sudo /sbin/shutdown -P now'"
    Alt + x

"prompt 'Are you sure you want to reboot?' 'sudo /sbin/shutdown -r now'"
    Alt + r

"prompt 'Are you sure you want to suspend?' 'sudo /home/dp/.local/bin/suspend'"
    Alt + s

# bluetooth
"[ $(echo -e 'On\nOff' | dmenu -i -p 'Bluetooth?') == 'On' ] && bluetoothctl power on || bluetoothctl power off"
    Alt + b
